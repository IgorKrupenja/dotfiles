{
  "statusLine": {
    "type": "command",
    "command": "bash /Users/igor/.claude/statusline-command.sh"
  },
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "mcp__*",
      "Bash(*)",
      "Edit(*)",
      "Write(*)",
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "WebFetch(*)"
    ]
  },
  "model": "claude-sonnet-4-6",
  "skipDangerousModePermissionPrompt": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$VSCODE_PID\" ] && python3 $HOME/.claude/notify-launch.py 'Claude Code' 'Claude needs your attention' 'Ping'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"$VSCODE_PID\" ] && python3 $HOME/.claude/notify-launch.py 'Claude Code' 'Task complete' 'Glass'"
          }
        ]
      }
    ]
  }
}
