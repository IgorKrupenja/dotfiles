{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    "editor.semanticHighlighting.enabled": true
  },
  "[python]": {
    "editor.rulers": [120],
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.quickSuggestions": true,
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "[xml]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  // add brackets to function autocompletion in Python
  "python.autoComplete.addBrackets": true,
  "files.autoSave": "onFocusChange",
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  // make Pep8 underline colour green for message type 'E'
  "python.linting.pycodestyleCategorySeverity.E": "Warning",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "'MonacoB Nerd Font', 'Monaco Nerd Font Mono', Monego, MonacoB, Monaco, Hack, 'Ubuntu Mono', monospace",
  "git-graph.showStatusBarItem": false,
  // map file extensions to languages
  "files.associations": {
    "*.emacs": "lisp",
    "*.zsh": "shellscript",
    "*.gitconfig": "ini",
    "*.firebaserc": "json",
    "hosts": "hosts"
  },
  "workbench.editor.tabCloseButton": "left",
  // make shortcuts for some commands work in terminal
  "terminal.integrated.commandsToSkipShell": [
    // ctrl + f
    "workbench.action.openRecent",
    // ctrl + r
    "workbench.action.debug.selectandstart"
  ],
  "editor.quickSuggestionsDelay": 0,
  // vertical ruler like IntelliJ
  "editor.rulers": [120],
  "window.newWindowDimensions": "inherit",
  // tweaks for themes
