{
  "[javascript][typescript][typescriptreact][json][jsonc][scss][html][css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    // TODO: only really needed for Night Owl-based themes? Or not at all?
    // "editor.semanticHighlighting.enabled": true,
    "editor.selectionHighlight": false,
    "editor.wordSeparators": "`~!@$%^&*()-=+[{]}\\|;:'\",.<>/?"
  },
  "[python]": {
    "editor.rulers": [120],
    "editor.tabSize": 4,
    "editor.formatOnType": true
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html][markdown][plaintext]": {
    "editor.wordBasedSuggestions": false
  },
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "[shellscript]": {
    "editor.language.colorizedBracketPairs": [
      ["[", "]"],
      ["{", "}"],
      ["(", ")"],
      ["do", "done"],
      ["if", "fi"],
      ["case", "esac"]
    ]
  },
  "[xml]": {
    // "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // TODO temporary workaround for Devtailor stuff
  "[dotenv]": {
    "editor.formatOnSave": false
  },
  "files.autoSave": "onFocusChange",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'MonacoB Nerd Font', MonacoB, Monego, Monaco, Hack, 'Ubuntu Mono', monospace",
  "git-graph.showStatusBarItem": false,
  // map file extensions to languages
  "files.associations": {
    "*.emacs": "lisp",
    "*.zsh": "shellscript",
    "*.gitconfig": "ini",
    "*.firebaserc": "json",
    "hosts": "hosts"
  },
  "workbench.editor.tabCloseButton": "left",
  // make shortcuts for some commands work in terminal
  "terminal.integrated.commandsToSkipShell": [
    // ctrl + f
    "workbench.action.openRecent",
    // ctrl + r
    "workbench.action.debug.selectandstart"
  ],
  "editor.quickSuggestionsDelay": 0,
  // vertical ruler like IntelliJ
  "editor.rulers": [120],
  "window.newWindowDimensions": "inherit",
  // tweaks for themes
  "git-graph.graph.colours": [
    "#de3d3b",
    "#08916a",
    "#E0AF02",
    "#288ed7",
    "#49d0c5",
    "#994cc3",
    "#403f53",
    "#d6438a"
  ],
  "workbench.colorCustomizations": {
    "[Nord]": {
      "scrollbar.shadow": "#00000000",
      "editorOverviewRuler.border": "#00000000",
      // "dart.closingLabels": "#616E8888",
      "editorBracketHighlight.foreground1": "#83A2C2",
      "editorBracketHighlight.foreground2": "#91BDBC",
      "editorBracketHighlight.foreground3": "#d6438a"
    },
    "[Nord Deep]": {
      "scrollbar.shadow": "#00000000",
      "editorOverviewRuler.border": "#00000000",
      // "dart.closingLabels": "#616E8888",
      "editorBracketHighlight.foreground1": "#83A2C2",
      "editorBracketHighlight.foreground2": "#91BDBC",
      "editorBracketHighlight.foreground3": "#d6438a"
    },
    "[Nord Light Brighter]": {
      "scrollbar.shadow": "#00000000",
      "editorOverviewRuler.border": "#00000000",
      // "dart.closingLabels": "#616E8888",
      // todo not good
      "editorBracketHighlight.foreground1": "#83A2C2",
      "editorBracketHighlight.foreground2": "#91BDBC",
      "editorBracketHighlight.foreground3": "#d6438a"
    }
  },
  "material-icon-theme.folders.color": "#72809e",
  "editor.autoClosingOvertype": "always",
  // workaround to fix jumpy markdown editng -- was fixed?
  // see https://github.com/microsoft/vscode/issues/69467
  // "markdown.preview.scrollEditorWithPreview": false,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment",
    "foreground": "#d6438a",
    "background": "#d6438a",
    "opacity": 10,
    "iconColour": "#d6438a",
    "rulerColour": "#d6438a",
    "fontWeight": "bold",
    "textDecoration": "underline"
  },
  "todo-tree.highlights.highlightDelay": 0,
  "todo-tree.regex.regex": "(%|#|/*|//|<!--|^\\s*\\*)\\s*($TAGS)",
  "todo-tree.regex.regexCaseSensitive": false,
  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "zenMode.fullScreen": false,
  "window.restoreWindows": "all",
  "editor.wordSeparators": "`~!@$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "highlight-matching-tag.highlightFromContent": true,
  "highlight-matching-tag.highlightSelfClosing": true,
  "highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "underline": "#0c969b"
      }
    },
    "closing": {
      "name": {
        "underline": "#0c969b"
      }
    }
  },
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "eslint.validate": ["javascript", "javascriptreact"],
  // add parentheses on autocompleting function calls
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "editor.formatOnSave": true,
  // display suggestions even when expanding snippets
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "material-icon-theme.saturation": 0.8,
  "material-icon-theme.hidesExplorerArrows": true,
  "cSpell.language": "en-GB,en,it,ru,lorem,et,et-EE,it-IT",
  "files.insertFinalNewline": true,
  "explorer.confirmDelete": false,
  "todo-tree.general.tags": ["TODO"],
  "editor.suggestSelection": "first",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "prettier.printWidth": 100,
  "editor.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.features.python.deepLearning": "enabled",
  // makes ESLint work in multi-root workspaces
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "workbench.preferredDarkColorTheme": "Nord Deep",
  "window.autoDetectColorScheme": true,
  "git-graph.commitDetailsView.autoCenter": false,
  "editor.dragAndDrop": false,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "svg.preview.showRuler": true,
  "editor.linkedEditing": true,
  "html-css-class-completion.enableFindUsage": true,
  "html-css-class-completion.enableScssFindUsage": true,
  "dart.showTodos": false,
  "security.workspace.trust.untrustedFiles": "open",
  "gitlens.currentLine.enabled": false,
  "git-graph.repository.commits.fetchAvatars": true,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.codeLens.enabled": false,
  "dart.debugSdkLibraries": true,
  "terminal.integrated.cursorBlinking": true,
  "postcssSorting.config": {
    "properties-order": "alphabetical"
  },
  "editor.semanticHighlighting.enabled": false,
  "svg.preview.mode": "svg",
  "terminal.integrated.gpuAcceleration": "on",
  "workbench.editor.pinnedTabSizing": "compact",
  "diffEditor.wordWrap": "off",
  "editor.inlayHints.enabled": "off",
  "workbench.iconTheme": "material-icon-theme",
  "editor.detectIndentation": false,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "todo-tree.filtering.includeHiddenFiles": true,
  "bashIde.explainshellEndpoint": "http://localhost:5001",
  "shellcheck.ignorePatterns": {
    "**/*.zshrc": false,
    "**/zshrc": false,
    "**/*.zprofile": false,
    "**/zprofile": false
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.external.osxExec": "iTerm.app",
  "dart.enableSnippets": false,
  "dart.automaticCommentSlashes": "all",
  "dart.openDevTools": "flutter",
  "dart.showDevToolsDebugToolBarButtons": false,
  "dart.lineLength": 120,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "graphql",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "jupyter",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "shellscript",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "dart"
  ],
  "cSpell.diagnosticLevel": "Hint",
  "dart.flutterSdkPaths": ["/Users/igor/fvm/versions"],
  "settingsSync.ignoredSettings": ["-dart.flutterSdkPaths", "workbench.colorTheme"],
  "editor.accessibilitySupport": "off",
  "cSpell.enableFiletypes": ["applescript", "gitignore", "hosts", "svg"],
  "codeswing.themePreview": true,
  "editor.inlineSuggest.enabled": true,
  "docker.containers.label": "ContainerName",
  "docker.containers.description": ["RepositoryNameAndTag", "Status"],
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "editor.guides.bracketPairs": "active",
  "editor.matchBrackets": "never",
  "editor.cursorBlinking": "phase",
  "dart.debugExternalPackageLibraries": true,
  "redhat.telemetry.enabled": false,
  "debug.javascript.debugByLinkOptions": {
    "trace": true
  },
  "angular.enable-strict-mode-prompt": false,
  "window.titleBarStyle": "custom",
  "editor.unicodeHighlight.allowedLocales": {
    "ru": true
  },
  "security.workspace.trust.enabled": false,
  "audioCues.onDebugBreak": "on",
  "workbench.editor.historyBasedLanguageDetection": true,
  "debug.showBreakpointsInOverviewRuler": true,
  // todo should only be enabled for legacy projects
  // "editor.formatOnSaveMode": "modificationsIfAvailable",
  "firestorerules.usePrettierFormatter": true,
  "git.mergeEditor": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "window.commandCenter": false,
  "cSpell.customDictionaries": {
    "custom": {
      "name": "custom",
      "path": "~/Projects/dotfiles/vscode/cspell-dict.txt",
      "scope": "user",
      "addWords": true
    }
  },
  "stylelint.snippet": ["css", "less", "postcss", "scss"],
  "stylelint.validate": ["css", "less", "postcss", "scss"],
  "emojisense.languages": {
    "javascript": true,
    "typescript": true,
    "markdown": true,
    "plaintext": {
      "markupCompletionsEnabled": false,
      "emojiDecoratorsEnabled": false
    },
    "scminput": true,
    "git-commit": true
  },
  "typescript.preferences.jsxAttributeCompletionStyle": "braces",
  "workbench.sideBar.location": "right",
  "vitest.enable": true,
  "vitest.showFailMessages": true,
  "git.openRepositoryInParentFolders": "always",
  "workbench.colorTheme": "GitHub Light",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "window.zoomLevel": 0.8

  // experimental check for problems in all TS files
  // disabled as very bad perf
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
