{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    "editor.semanticHighlighting.enabled": true
  },
  "[python]": {
    "editor.rulers": [120],
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.quickSuggestions": true,
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "workbench.iconTheme": "material-icon-theme",
  // each XML attribute on new line when formatting
  "xmlTools.splitAttributesOnFormat": true,
  // add brackets to function autocompletion in Python
  "python.autoComplete.addBrackets": true,
  "files.autoSave": "onFocusChange",
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  // make Pep8 underline colour green for message type 'E'
  "python.linting.pycodestyleCategorySeverity.E": "Warning",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "'MonacoB Nerd Font', 'Monaco Nerd Font Mono', Monego, MonacoB, Monaco, Hack, 'Ubuntu Mono', monospace",
  "git-graph.showStatusBarItem": false,
  // map file extensions to languages
  "files.associations": {
    "*.emacs": "lisp",
    "*.zsh": "shellscript",
    "*.gitconfig": "ini",
    "*.firebaserc": "json"
  },
  "workbench.editor.tabCloseButton": "left",
  // make shortcuts for some commands work in terminal
  "terminal.integrated.commandsToSkipShell": [
    // ctrl + f
    "workbench.action.openRecent",
    // ctrl + r
    "workbench.action.debug.selectandstart"
  ],
  "editor.quickSuggestionsDelay": 0,
  // vertical ruler like IntelliJ
  "editor.rulers": [100],
  "window.newWindowDimensions": "inherit",
  // tweaks for themes
  "git-graph.graph.colours": [
    "#de3d3b",
    "#08916a",
    "#E0AF02",
    "#288ed7",
    "#49d0c5",
    "#994cc3",
    "#403f53",
    "#d6438a"
  ],
  "workbench.colorCustomizations": {
    "[Nord]": {
      "scrollbar.shadow": "#00000000",
      "editorOverviewRuler.border": "#00000000",
      "dart.closingLabels": "#616E8888"
    },
    "[Night Owl Light (No Italics)]": {
      "editorWarning.border": "#0000",
      "scrollbar.shadow": "#00000000",
      // todo new stuff
      "editorOverviewRuler.border": "#00000000",
      "editorLineNumber.foreground": "#989fb1",
      "editor.background": "#Fff",
      "editorError.border": "#fff",
      "terminal.background": "#Fff",
      "panel.background": "#fff",
      "sideBar.background": "#fff",
      "sideBar.border": "#d9d9d9",
      "statusBar.background": "#fff",
      "statusBar.border": "#fff",
      "focusBorder": "#fff0",
      "dropdown.background": "#fff",
      "input.background": "#fff",
      "editorWidget.background": "#fff",
      "editorCursor.foreground": "#403F55",
      "dart.closingLabels": "#939dbb88",
      "debugConsole.infoForeground": "#403F55"
    },
    "[Vitesse Owl Light]": {
      "dart.closingLabels": "#939dbb88",
      "scrollbar.shadow": "#00000000",
      "tab.activeBorder": "#d6438a",
      "terminal.ansiBrightBlack": "#939dbb",
      "terminal.ansiBlack": "#403F55",
      "debugConsole.infoForeground": "#403F55",
      "statusBar.debuggingBackground": "#d6438a",
      "statusBar.debuggingForeground": "#FFF",
      "statusBar.debuggingBorder": "#d6438a",
      "scrollbarSlider.background": "#393a3430",
      "editor.wordHighlightBackground": "#1c6b4820",
      "editor.wordHighlightStrongBackground": "#1c6b4820",
      "list.inactiveSelectionBackground": "#e6e6e6",
      "list.activeSelectionBackground": "#dddddd",
      "list.hoverBackground": "#e6e6e6"
    }
  },
  "editor.semanticTokenColorCustomizations": {
    "[Vitesse Owl Light]": {
      "rules": {
        "annotation": "#994cc3"
      }
    }
  },
  "editor.tokenColorCustomizations": {
    "[Night Owl Light (No Italics)]": {
      "strings": "#C96765"
    },
    "[Vitesse Owl Light]": {
      "strings": "#C96765",
      "variables": "#403F55",
      "textMateRules": [
        {
          "name": "Json strings",
          "scope": "string.quoted.double.json.comments",
          "settings": {
            "foreground": "#C96765"
          }
        },
        {
          "name": "Booleans",
          "scope": "constant.language.boolean",
          "settings": {
            "foreground": "#994cc3"
          }
        },
        {
          "name": "Properties",
          "scope": "variable.other",
          "settings": {
            "foreground": "#403F55"
          }
        },
        {
          "name": "Disable italics",
          "scope": [
            "comment",
            "comment.block",
            "comment.block.documentation",
            "comment.line",
            "constant",
            "constant.character",
            "constant.character.escape",
            "constant.numeric",
            "constant.numeric.integer",
            "constant.numeric.float",
            "constant.numeric.hex",
            "constant.numeric.octal",
            "constant.other",
            "constant.regexp",
            "constant.rgb-value",
            "emphasis",
            "entity",
            "entity.name",
            "entity.name.class",
            "entity.name.function",
            "entity.name.method",
            "entity.name.section",
            "entity.name.selector",
            "entity.name.tag",
            "entity.name.type",
            "entity.other",
            "entity.other.attribute-name",
            "entity.other.inherited-class",
            "invalid",
            "invalid.deprecated",
            "invalid.illegal",
            "keyword",
            "keyword.control",
            "keyword.control.flow.ts",
            "keyword.operator",
            "keyword.operator.new",
            "keyword.operator.assignment",
            "keyword.operator.arithmetic",
            "keyword.operator.logical",
            "keyword.other",
            "markup",
            "markup.bold",
            "markup.changed",
            "markup.deleted",
            "markup.heading",
            "markup.inline.raw",
            "markup.inserted",
            "markup.italic",
            "markup.list",
            "markup.list.numbered",
            "markup.list.unnumbered",
            "markup.other",
            "markup.quote",
            "markup.raw",
            "markup.underline",
            "markup.underline.link",
            "meta",
            "meta.block",
            "meta.cast",
            "meta.class",
            "meta.function",
            "meta.function-call",
            "meta.preprocessor",
            "meta.return-type",
            "meta.selector",
            "meta.tag",
            "meta.type.annotation",
            "meta.type",
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end",
            "punctuation.separator",
            "punctuation.separator.continuation",
            "punctuation.terminator",
            "punctuation.accessor",
            "storage",
            "storage.modifier",
            "storage.type",
            "string",
            "string.interpolated",
            "string.other",
            "string.quoted",
            "string.quoted.double",
            "string.quoted.other",
            "string.quoted.single",
            "string.quoted.triple",
            "string.regexp",
            "string.unquoted",
            "strong",
            "support",
            "support.class",
            "support.constant",
            "support.function",
            "support.other",
            "support.type",
            "support.type.property-name",
            "support.variable",
            "variable",
            "variable.language",
            "variable.name",
            "variable.other",
            "variable.other.readwrite",
            "variable.parameter"
          ],
          "settings": {
            "fontStyle": ""
          }
        }
      ]
    }
  },
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "WoM in Docker",
      "database": "world_of_mouth_development",
      "username": "postgres",
      "password": "postgres"
    }
  ],
  "editor.renderWhitespace": "none",
  "material-icon-theme.folders.color": "#72809e",
  "editor.autoClosingOvertype": "always",
  // workaround to fix jumpy markdown ediitng -- was fixed?
  // see https://github.com/microsoft/vscode/issues/69467
  // "markdown.preview.scrollEditorWithPreview": false,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment",
    "foreground": "#d6438a",
    "background": "#d6438a",
    "opacity": "10",
    "iconColour": "#d6438a",
    "rulerColour": "#d6438a",
    "fontWeight": "bold",
    "textDecoration": "underline"
  },
  "todo-tree.highlights.highlightDelay": 0,
  "todo-tree.regex.regex": "(%|#|/*|//|<!--|^\\s*\\*)\\s*($TAGS)",
  "todo-tree.regex.regexCaseSensitive": false,
  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "workbench.activityBar.visible": true,
  "breadcrumbs.enabled": true,
  "zenMode.fullScreen": false,
  "window.restoreWindows": "all",
  "editor.wordSeparators": "`~!@$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "highlight-matching-tag.highlightFromContent": true,
  "highlight-matching-tag.highlightSelfClosing": true,
  "highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "underline": "#0c969b"
      }
    },
    "closing": {
      "name": {
        "underline": "#0c969b"
      }
    }
  },
  "customizeUI.titleBar": "inline",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "eslint.validate": ["javascript", "javascriptreact"],
  // add parentheses on autocompleting function calls
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "editor.formatOnSave": true,
  // display suggestions even when expanding snippets
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "python.pythonPath": "/usr/local/opt/python/libexec/bin/python",
  "material-icon-theme.saturation": 0.8,
  "material-icon-theme.hidesExplorerArrows": true,
  "cSpell.language": "en-GB,en,it,ru,lorem",
  "bashIde.highlightParsingErrors": false,
  "cSpell.userWords": [
    "Adcash",
    "Avenir",
    "Datepicker",
    "Devtailor",
    "Handies",
    "ILIKE",
    "Jaarika",
    "Kertu",
    "Kodality",
