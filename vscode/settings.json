  "editor.tokenColorCustomizations": {
    "[Vitesse Owl Light]": {
      "strings": "#C96765",
      "variables": "#403F55",
      "textMateRules": [
        {
          "name": "Json strings",
          "scope": "string.quoted.double.json.comments",
          "settings": {
            "foreground": "#C96765"
          }
        },
        {
          "name": "TS Decorator",
          "scope": "source.ts meta.decorator entity.name.function",
          "settings": {
            "foreground": "#0c969b"
          }
        },
        {
          "name": "Booleans",
          "scope": "constant.language.boolean",
          "settings": {
            "foreground": "#994cc3"
          }
        },
        {
          "name": "Booleans in JSON",
          "scope": "constant.language.json.comments",
          "settings": {
            "foreground": "#994cc3"
          }
        },
        {
          "name": "null",
          "scope": "constant.language.null",
          "settings": {
            "foreground": "#4876d6"
          }
        },
        {
          "name": "SCSS &",
          "scope": "entity.name.tag.reference.scss",
          "settings": {
            "foreground": "#C96765"
          }
        },
        {
          "name": "CSS custom tags like Angular components",
          "scope": "entity.name.tag.custom",
          "settings": {
            "foreground": "#C96765"
          }
        },
        {
          "name": "CSS units",
          "scope": "keyword.other.unit",
          "settings": {
            "foreground": "#4876d6"
          }
        },
        {
          "name": "Properties",
          "scope": "variable.other",
          "settings": {
            "foreground": "#403F55"
          }
        },
        {
          "name": "Disable italics",
          "scope": [
            "comment",
            "comment.block",
            "comment.block.documentation",
            "comment.line",
            "constant",
            "constant.character",
            "constant.character.escape",
            "constant.numeric",
            "constant.numeric.integer",
            "constant.numeric.float",
            "constant.numeric.hex",
            "constant.numeric.octal",
            "constant.other",
            "constant.regexp",
            "constant.rgb-value",
            "emphasis",
            "entity",
            "entity.name",
            "entity.name.class",
            "entity.name.function",
            "entity.name.method",
            "entity.name.section",
            "entity.name.selector",
            "entity.name.tag",
            "entity.name.type",
            "entity.other",
            "entity.other.attribute-name",
            "entity.other.inherited-class",
            "invalid",
            "invalid.deprecated",
            "invalid.illegal",
            "keyword",
            "keyword.control",
            "keyword.control.flow.ts",
            "keyword.operator",
            "keyword.operator.expression.instanceof.ts",
            "keyword.operator.new",
            "keyword.operator.assignment",
            "keyword.operator.arithmetic",
            "keyword.operator.logical",
            "keyword.other",
            "markup",
            "markup.bold",
            "markup.changed",
            "markup.deleted",
            "markup.heading",
            "markup.inline.raw",
            "markup.inserted",
            "markup.italic",
            "markup.list",
            "markup.list.numbered",
            "markup.list.unnumbered",
            "markup.other",
            "markup.quote",
            "markup.raw",
            "markup.underline",
            "markup.underline.link",
            "meta",
            "meta.block",
            "meta.cast",
            "meta.class",
            "meta.function",
            "meta.function-call",
            "meta.preprocessor",
            "meta.return-type",
            "meta.selector",
            "meta.tag",
            "meta.type.annotation",
            "meta.type",
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end",
            "punctuation.separator",
            "punctuation.separator.continuation",
            "punctuation.terminator",
            "punctuation.accessor",
            "storage",
            "storage.modifier",
            "storage.type",
            "string",
            "string.interpolated",
            "string.other",
            "string.quoted",
            "string.quoted.double",
            "string.quoted.other",
            "string.quoted.single",
            "string.quoted.triple",
            "string.regexp",
            "string.unquoted",
            "strong",
            "support",
