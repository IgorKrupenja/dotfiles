{
    "editor.formatOnPaste": true,
    "workbench.iconTheme": "material-icon-theme",
    "markdownlint.config": {
        // disable "No HTML" warnings
        "MD033": false,
        // disable "no trailing newline"
        "MD047": false
    },
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "terminal.integrated.cursorBlinking": true,
    // each XML attribute on new line when formatting
    "xmlTools.splitAttributesOnFormat": true,
    // add brackets to function autocompletion in Python
    "python.autoComplete.addBrackets": true,
    "files.autoSave": "onFocusChange",
    "python.linting.pep8Enabled": true,
    "python.linting.pydocstyleEnabled": true,
    // make Pep8 underline colour green for message type 'E'
    "python.linting.pep8CategorySeverity.E": "Warning",
    "editor.cursorSmoothCaretAnimation": true,
    // disable text drag-and-drop
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'MonacoB Nerd Font', Monego, MonacoB, Monaco, Hack, monospace",
    // good ol' dual-pane settings editor
    "workbench.settings.useSplitJSON": true,
    // disable Git Graph in status bar
    "git-graph.showStatusBarItem": false,
    // disable welcome page
    "workbench.startupEditor": "none",
    // map file types to languages
    "files.associations": {
        "*.emacs": "lisp"
    },
    "workbench.editor.tabCloseButton": "left",
    // disable movement in git graph view when clicking on a commit
    "git-graph.autoCenterCommitDetailsView": false,
    // make shortcuts for some commands work in terminal
    "terminal.integrated.commandsToSkipShell": [
        // ctrl + f
        "workbench.action.openRecent"
    ],
    "editor.quickSuggestionsDelay": 0,
    // vertical ruler like IntelliJ
    "editor.rulers": [
        120
    ],
    // To enable British English spell-checking
    "spellright.groupDictionaries": false,
    // Underline colour for speller
    "spellright.notificationClass": "information",
    "window.newWindowDimensions": "maximized",
    "bracket-pair-colorizer-2.colors": [
        "#55b4d4",
        "#f2ae49",
        "#a37acc",
    ],
    // TODO do I need this?
    "bracket-pair-colorizer-2.excludedLanguages": [
        // "html"
    ],
    "editor.minimap.renderCharacters": false,
    // hack to fix titlebar-less extension bug
    // also need to have checksum fixer extension enabled
    // otherwise centre-top area of the window is not clickable
    // see https://github.com/electron/electron/issues/14529
    // disabled for now as titlebar-less extension is broken anyway
    // "window.title": ".",
    "macros.list": {
        // switch focus back on MD preview open
        "showPreviewAndFocusBack": [
            "markdown.showPreviewToSide",
            {
                "command": "$delay",
                // TODO might need to increase for very large files
                "args": {
                    "delay": 600
                }
            },
            "workbench.action.focusLeftGroup"
        ],
        // switch focus back on LOCKED MD preview open
        "showLockedPreviewAndFocusBack": [
            "markdown.showLockedPreviewToSide",
            {
                "command": "$delay",
                // TODO might need to increase for very large files
                "args": {
                    "delay": 600
                }
            },
            "workbench.action.focusLeftGroup"
        ]
    },
    // TODO need to remove most of the crap below
    // fixes for various themes to make them flatter
    "workbench.colorCustomizations": {
        "[Nord]": {
            "sideBar.border": "#00000000",
            "scrollbar.shadow": "#ffffff00",
            "panel.border": "#00000000",
            // "editor.background": "#1C2027"
        },
        "[One Monokai 80s]": {
            // "editor.background": "#212121"
        },
    },
    // fix comment colours for some themes
    "editor.tokenColorCustomizations": {
        "[Summer Time]": {
            "comments": "#676d95",
            "textMateRules": [
                {
                    "scope": "punctuation.definition.comment",
                    "settings": {
                        "foreground": "#676d95"
                    }
                },
            ]
        }
    },
    "editor.renderWhitespace": "selection",
    "git-graph.fetchAvatars": true,
    "material-icon-theme.activeIconPack": "react_redux",
    "git-graph.graphColours": [
        "#399ee6",
        "#a37acc",
        "#f51818",
        "#cc821a",
        "#6c7680",
        "#f77a7a",
        "#55b4d4",
        "#ec8a00",
        "#99bf4d",
        "#f2ae49",
        "#abb0b6",
        "#4cbf99"
    ],
    // TODO might need to change
    "material-icon-theme.folders.color": "#959da6",
    "editor.matchBrackets": false,
    "editor.autoClosingOvertype": "always",
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false
    },
    "spellright.language": [
        "en",
        "en_GB"
    ],
    // workaround to fix jumpy markdown ediitng
    // see https://github.com/microsoft/vscode/issues/69467
    "markdown.preview.scrollEditorWithPreview": false,
    "todo-tree.highlights.defaultHighlight": {
        "type": "text",
        "foreground": "#a37acc",
        "background": "#ffffff",
        "iconColour": "#a37acc",
        "rulerColour": "#a37acc",
        "fontWeight": "bold",
        "textDecoration": "dashed underline overline",
        "opacity": "0"
    },
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.regex.regex": "((%|#|/*|//|<!--|^\\s*\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.regex.regexCaseSensitive": false,
    "editor.tabSize": 2,
    // smoother cursor blink animation
    "editor.cursorBlinking": "smooth",
    // TODO experimental
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.activityBar.visible": true,
    "breadcrumbs.enabled": false,
    "color-manager.languages": [
        "css",
        "html",
        "javascript",
        "json",
        "scss"
    ],
    "workbench.editor.tabSizing": "shrink",
    "zenMode.fullScreen": false,
    "window.restoreWindows": "all",
    "[css]": {
        "editor.formatOnPaste": false
    },
    // properly format text in HTML with line breaks
    // "html.format.preserveNewLines": false,
    "editor.minimap.enabled": false,
    "highlight-matching-tag.highlightFromContent": true,
    "highlight-matching-tag.highlightSelfClosing": true,
    "highlight-matching-tag.styles": {
        "opening": {
            "name": {
                "underline": "#D68400"
            }
        },
        "closing": {
            "name": {
                "underline": "#D68400"
            }
        }
    },
    // needed for customizeUI to inline title bar
    "window.titleBarStyle": "native",
    "customizeUI.titleBar": "inline",
    "customizeUI.activityBar": "bottom",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "html",
        "css"
    ],
    "workbench.colorTheme": "Flat White",
}