  "window.titleBarStyle": "native",
  "files.insertFinalNewline": true,
  "explorer.confirmDelete": false,
  "todo-tree.general.tags": ["TODO"],
  "editor.suggestSelection": "first",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.printWidth": 100,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.features.python.deepLearning": "enabled",
  "python.formatting.autopep8Args": ["\"--max-line-length 120\""],
  "python.linting.pycodestyleArgs": ["--max-line-length=120"],
  "editor.stablePeek": true,
  // makes ESLint work in multi-root workspaces
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "python.linting.mypyEnabled": true,
  "customizeUI.activityBar": "bottom",
  "editor.accessibilitySupport": "off",
  "workbench.preferredDarkColorTheme": "Nord",
  "workbench.preferredLightColorTheme": "Vitesse Owl Light",
  "window.autoDetectColorScheme": true,
  "git-graph.commitDetailsView.autoCenter": false,
  "editor.fontSize": 13,
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    ["#0c969b", "#4876d6", "#994cc3"],
    "Red"
  ],
  "hediet.vscode-drawio.theme": "Kennedy",
  "customizeUI.fontSizeMap": {
    "13px": "14px",
    "12px": "14px",
    "window-title": "14px", // Window title font when using custom titlebar
    "tab-title": "14px", // Used for editor tab titles
    "monospace": "14px", // Used for monospace fonts in user interface
    "menu": "14px" // Used for menu items (windows only)
  },
  "customizeUI.activityBarHideSettings": true,
  "terminal.integrated.fontSize": 13,
  "editor.dragAndDrop": false,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "nasc-touchbar.addCursorBelow": false,
  "svg.preview.showRuler": true,
  "nasc-touchbar.peekDefinition": true,
  "nasc-touchbar.showCommands": false,
  "nasc-touchbar.togglePanel": false,
  "nasc-touchbar.jumpToBracket": true,
  "nasc-touchbar.showReferences": true,
  "jumpy.display.backgroundColor": "#F1CA81",
  "jumpy.display.color": "#2D3441",
  "editor.linkedEditing": true,
  "html-css-class-completion.enableFindUsage": true,
  "html-css-class-completion.enableScssFindUsage": true,
  "debug.console.fontSize": 13,
  "dart.showTodos": false,
  "dart.previewLsp": true,
  "security.workspace.trust.untrustedFiles": "open",
  "gitlens.currentLine.enabled": false,
  "git-graph.repository.commits.fetchAvatars": true,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "Vitesse Owl Light",
  "gitlens.codeLens.enabled": false,
  "sqltools.highlightQuery": false,
  "htmlhint.enable": false,
  "dart.debugExternalLibraries": false,
  "dart.debugSdkLibraries": false,
  "debug.console.wordWrap": false,
  "terminal.integrated.cursorBlinking": true,
  "postcssSorting.config": {
    "properties-order": "alphabetical"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }

  // experimental check for problems in all TS files
  // disabled as very bad perf
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
