{
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.cursorBlinking": true,
  // each XML attribute on new line when formatting
  "xmlTools.splitAttributesOnFormat": true,
  // add brackets to function autocompletion in Python
  "python.autoComplete.addBrackets": true,
  "files.autoSave": "onFocusChange",
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  // make Pep8 underline colour green for message type 'E'
  "python.linting.pycodestyleCategorySeverity.E": "Warning",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "'MonacoB Nerd Font', 'Monaco Nerd Font Mono', Monego, MonacoB, Monaco, Hack, 'Ubuntu Mono', monospace",
  "git-graph.showStatusBarItem": false,
  // map file extensions to languages
  "files.associations": {
    "*.emacs": "lisp",
    "*.zsh_linux": "shellscript",
    "*.zsh": "shellscript",
    "*.gitconfig": "ini",
    "*.firebaserc": "json"
  },
  "workbench.editor.tabCloseButton": "left",
  // make shortcuts for some commands work in terminal
  "terminal.integrated.commandsToSkipShell": [
    // ctrl + f
    "workbench.action.openRecent"
  ],
  "editor.quickSuggestionsDelay": 0,
  // vertical ruler like IntelliJ
  "editor.rulers": [100],
  "window.newWindowDimensions": "inherit",
  // tweaks for themes
  "workbench.colorCustomizations": {
    "[Nord]": {
      "scrollbar.shadow": "#00000000",
      "editorOverviewRuler.border": "#00000000",
      "dart.closingLabels": "#616E8888"
    },
    "[Night Owl Light (No Italics)]": {
      "editorWarning.border": "#0000",
      "scrollbar.shadow": "#00000000",
      // todo new stuff
      "editorOverviewRuler.border": "#00000000",
      "editorLineNumber.foreground": "#989fb1",
      "editor.background": "#Fff",
      "editorError.border": "#fff",
      "terminal.background": "#Fff",
      "panel.background": "#fff",
      "sideBar.background": "#fff",
      "sideBar.border": "#d9d9d9",
      "statusBar.background": "#fff",
      "statusBar.border": "#fff",
      "focusBorder": "#fff0",
      "dropdown.background": "#fff",
      "input.background": "#fff",
      "editorWidget.background": "#fff",
      "editorCursor.foreground": "#403F55",
      "dart.closingLabels": "#939dbb88",
      "debugConsole.infoForeground": "#403F55"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Night Owl Light (No Italics)]": {
      // "semanticHighlighting": true
      "strings": "#C96765"
    }
  },
  "editor.renderWhitespace": "none",
  "git-graph.graph.colours": [
    "#bf616a",
    "#a3be8c",
    "#ebcb8b",
    "#81a1c1",
    "#88c0d0",
    "#e5e9f0",
    "#4c566a",
    "#b48ead"
  ],
  "material-icon-theme.folders.color": "#72809e",
  "editor.autoClosingOvertype": "always",
  "[markdown]": {
    "editor.quickSuggestions": true,
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // workaround to fix jumpy markdown ediitng -- was fixed?
  // see https://github.com/microsoft/vscode/issues/69467
  // "markdown.preview.scrollEditorWithPreview": false,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment",
    "foreground": "#b48ead",
    "background": "#b48ead",
    "opacity": "20",
    "iconColour": "#b48ead",
    "rulerColour": "#b48ead",
    "fontWeight": "bold",
    "textDecoration": "underline"
  },
  "todo-tree.highlights.highlightDelay": 0,
  "todo-tree.regex.regex": "((%|#|/*|//|<!--|^\\s*\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
  "todo-tree.regex.regexCaseSensitive": false,
  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "workbench.activityBar.visible": true,
  "breadcrumbs.enabled": true,
  "zenMode.fullScreen": false,
  "window.restoreWindows": "all",
  "editor.wordSeparators": "`~!@$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "highlight-matching-tag.highlightFromContent": true,
  "highlight-matching-tag.highlightSelfClosing": true,
  "highlight-matching-tag.styles": {
    "opening": {
      "name": {
        "underline": "#b58faf"
      }
    },
    "closing": {
      "name": {
        "underline": "#b58faf"
      }
    }
  },
  "customizeUI.titleBar": "inline",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "eslint.validate": ["javascript", "javascriptreact"],
  // add parentheses on autocompleting function calls
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "editor.formatOnSave": true,
  // display suggestions even when expanding snippets
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "debug.toolBarLocation": "docked",
  "python.pythonPath": "/usr/local/opt/python/libexec/bin/python",
  "material-icon-theme.saturation": 0.8,
  "material-icon-theme.hidesExplorerArrows": true,
  "cSpell.language": "en-GB,en,it,ru,lorem",
  "bashIde.highlightParsingErrors": false,
  "cSpell.userWords": [
    "Adcash",
    "Avenir",
    "Devtailor",
    "Handies",
    "Jaarika",
    "Kertu",
    "Kodality",
    "Krematoorium",
    "Krupenja",
    "Maksim",
    "Parens",
    "Pipedrive",
    "Playtech",
    "Praktikakohvik",
    "Prepper",
    "Serializers",
    "Siidisaba",
    "Spellright",
    "Transferwise",
    "Youtube",
    "animationend",
    "audioplayers",
    "autoplay",
    "barcode",
    "captcha",
    "cloc",
    "creds",
    "dotfiles",
    "firestore",
    "hacky",
    "minmax",
    "mixins",
    "overscroll",
    "pmmmwh",
    "smth",
    "svgr",
    "wojtekmaj",
    "xlink"
  ],
  "window.titleBarStyle": "native",
  "[html]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.insertFinalNewline": true,
  "explorer.confirmDelete": false,
  "todo-tree.general.tags": ["TODO"],
  "editor.suggestSelection": "first",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.printWidth": 100,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "todo-tree.tree.showScanModeButton": false,
  "[python]": {
    "editor.rulers": [120],
    "editor.tabSize": 4
  },
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.features.python.deepLearning": "enabled",
  "python.formatting.autopep8Args": ["\"--max-line-length 120\""],
  "python.linting.pycodestyleArgs": ["--max-line-length=120"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.stablePeek": true,
  // makes ESLint work in multi-root workspaces
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "python.linting.mypyEnabled": true,
  "prettier.arrowParens": "avoid",
  "customizeUI.activityBar": "bottom",
  "tabnine.experimentalAutoImports": true,
  "editor.accessibilitySupport": "off",
  "workbench.preferredDarkColorTheme": "Nord",
  "workbench.preferredLightColorTheme": "Night Owl Light (No Italics)",
  "window.autoDetectColorScheme": true,
  "git-graph.commitDetailsView.autoCenter": false,
  "editor.fontSize": 13,
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    ["#83A2C2", "#91BDBC", "#b48ead"],
    "Red"
  ],
  "hediet.vscode-drawio.theme": "dark",
  "customizeUI.fontSizeMap": {
    "13px": "14px",
    "12px": "14px",
    "window-title": "14px", // Window title font when using custom titlebar
    "tab-title": "14px", // Used for editor tab titles
    "monospace": "14px", // Used for monospace fonts in user interface
    "menu": "14px" // Used for menu items (windows only)
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "customizeUI.activityBarHideSettings": true,
  "terminal.integrated.fontSize": 13,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.dragAndDrop": false,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "nasc-touchbar.addCursorBelow": false,
  "svg.preview.showRuler": true,
  "nasc-touchbar.peekDefinition": true,
  "nasc-touchbar.showCommands": false,
  "nasc-touchbar.togglePanel": false,
  "nasc-touchbar.jumpToBracket": true,
  "nasc-touchbar.showReferences": true,
  "jumpy.display.backgroundColor": "#F1CA81",
  "jumpy.display.color": "#2D3441",
  "dart.previewLsp": true,
  "editor.linkedEditing": true,
  "html-css-class-completion.enableFindUsage": true,
  "html-css-class-completion.enableScssFindUsage": true,
  "workbench.colorTheme": "Night Owl Light (No Italics)",
  "debug.console.fontSize": 13

  // experimental check for problems in all TS files
  // disabled as very bad perf
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
