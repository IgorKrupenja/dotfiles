{
    "editor.formatOnPaste": true,
    "workbench.iconTheme": "material-icon-theme",
    "markdownlint.config": {
        // disable "No HTML" warnings
        "MD033": false,
        // disable "no trailing newline"
        "MD047": false
    },
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "terminal.integrated.cursorBlinking": true,
    // each XML attribute on new line when formatting
    "xmlTools.splitAttributesOnFormat": true,
    // add brackets to function autocompletion in Python
    "python.autoComplete.addBrackets": true,
    "files.autoSave": "onFocusChange",
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    // make Pep8 underline colour green for message type 'E'
    "python.linting.pycodestyleCategorySeverity.E": "Warning",
    "editor.cursorSmoothCaretAnimation": true,
    // disable text drag-and-drop
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'MonacoB Nerd Font', Monego, MonacoB, Monaco, Hack, monospace",
    // good ol' dual-pane settings editor
    "workbench.settings.useSplitJSON": true,
    // disable Git Graph in status bar
    "git-graph.showStatusBarItem": false,
    // disable welcome page
    "workbench.startupEditor": "none",
    // map file types to languages
    "files.associations": {
        "*.emacs": "lisp"
    },
    "workbench.editor.tabCloseButton": "left",
    // disable movement in git graph view when clicking on a commit
    "git-graph.autoCenterCommitDetailsView": false,
    // make shortcuts for some commands work in terminal
    "terminal.integrated.commandsToSkipShell": [
        // ctrl + f
        "workbench.action.openRecent"
    ],
    "editor.quickSuggestionsDelay": 0,
    // vertical ruler like IntelliJ
    "editor.rulers": [
        120
    ],
    // To enable British English spell-checking
    "spellright.groupDictionaries": false,
    // Underline colour for speller
    "spellright.notificationClass": "information",
    "window.newWindowDimensions": "maximized",
    "bracket-pair-colorizer-2.colors": [
        "#83A2C2",
        "#91BDBC",
        "#b48ead",
    ],
    "editor.minimap.renderCharacters": false,
    "macros.list": {
        // switch focus back on MD preview open
        "showPreviewAndFocusBack": [
            "markdown.showPreviewToSide",
            {
                "command": "$delay",
                // TODO might need to increase for very large files
                "args": {
                    "delay": 600
                }
            },
            "workbench.action.focusLeftGroup"
        ],
        // switch focus back on LOCKED MD preview open
        "showLockedPreviewAndFocusBack": [
            "markdown.showLockedPreviewToSide",
            {
                "command": "$delay",
                // TODO might need to increase for very large files
                "args": {
                    "delay": 600
                }
            },
            "workbench.action.focusLeftGroup"
        ],
        // TODO these might need some extra testing
        "runWithDebugConsoleOpen": [
            "workbench.action.debug.run",
            "workbench.debug.action.toggleRepl"
        ],
        "debugWithDebugConsoleOpen": [
            "workbench.action.debug.start",
            "workbench.debug.action.toggleRepl"
        ]
    },
    // fixes for various themes to make them flatter
    "workbench.colorCustomizations": {
        "[Nord]": {
            // "sideBar.border": "#00000000",
            // "panel.border": "#00000000",
            // "editor.background": "#1C2027"
            "scrollbar.shadow": "#00000000",
            "editorOverviewRuler.border": "#00000000"
        }
    },
    "editor.renderWhitespace": "selection",
    "git-graph.fetchAvatars": true,
    "git-graph.graphColours": [
        "#4c566a",
        "#bf616a",
        "#a3be8c",
        "#ebcb8b",
        "#81a1c1",
        "#b48ead",
        "#8fbcbb",
        "#eceff4"
    ],
    "material-icon-theme.folders.color": "#7F8896",
    "editor.matchBrackets": false,
    "editor.autoClosingOvertype": "always",
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false
    },
    "spellright.language": [
        "en",
        "en_GB"
    ],
    // workaround to fix jumpy markdown ediitng
    // see https://github.com/microsoft/vscode/issues/69467
    "markdown.preview.scrollEditorWithPreview": false,
    "todo-tree.highlights.defaultHighlight": {
        "type": "text",
        "foreground": "#b48ead",
        "background": "#ffffff",
        "opacity": "0",
        "iconColour": "#b48ead",
        "rulerColour": "#b48ead",
        "fontWeight": "bold",
        "textDecoration": "underline",
    },
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.regex.regex": "((%|#|/*|//|<!--|^\\s*\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.regex.regexCaseSensitive": false,
    "editor.tabSize": 2,
    // smoother cursor blink animation
    "editor.cursorBlinking": "smooth",
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.activityBar.visible": false,
    "breadcrumbs.enabled": false,
    "color-manager.languages": [
        "css",
        "html",
        "javascript",
        "json",
        "scss"
    ],
    "workbench.editor.tabSizing": "shrink",
    "zenMode.fullScreen": false,
    "window.restoreWindows": "all",
    "[css]": {
        "editor.formatOnPaste": false,
        "editor.wordSeparators": "`~!@$%^&*()-=+[{]}\\|;:'\",.<>/?"
    },
    "editor.minimap.enabled": false,
    "highlight-matching-tag.highlightFromContent": true,
    "highlight-matching-tag.highlightSelfClosing": true,
    "highlight-matching-tag.styles": {
        "opening": {
            "name": {
                "underline": "#b48ead"
            }
        },
        "closing": {
            "name": {
                "underline": "#b48ead"
            }
        }
    },
    // needed for customizeUI to inline title bar
    "window.titleBarStyle": "native",
    "customizeUI.titleBar": "inline",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "spellright.documentTypes": [
        "latex",
        "html",
        "css",
        "shellscript",
        "javascript"
    ],
    "spellright.spellContextByClass": {
        "shellscript": "comments"
    },
    "liveServer.settings.donotVerifyTags": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
    ],
    // add parentheses on autocompleting function calls
    "javascript.suggest.completeFunctionCalls": true,
    "typescript.suggest.completeFunctionCalls": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.formatOnSave": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "debug.toolBarLocation": "docked",
    "workbench.colorTheme": "Nord",
    "liveServer.settings.fullReload": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "python.pythonPath": "/usr/local/opt/python/libexec/bin/python",
    "material-icon-theme.saturation": 0.6,
    "material-icon-theme.hidesExplorerArrows": true,
    // // close brackets also inside JS template literals
    // "editor.autoClosingBrackets": "always",
    // // close backticks in JS template literals
    // "editor.autoClosingQuotes": "always"
}
