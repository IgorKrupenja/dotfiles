{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SASS watcher",
      "type": "shell",
      "command": "sass",
      "args": ["--watch", "app/assets/styles/scss:styles"],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Terminal",
      "type": "process",
      "command": "/bin/zsh",
      "args": ["-l"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent"
      }
    },
    {
      "label": "Prepare watchers",
      "dependsOn": ["SASS watcher", "Terminal"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
