{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SASS/SCSS watcher",
      "type": "shell",
      "command": "sass",
      "args": ["--watch", "app/assets/scss"],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Terminal",
      "type": "process",
      "command": "/bin/zsh",
      "args": ["-l"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent"
      }
    },
    {
      "label": "Start watchers",
      "dependsOn": ["TSC watch", "SASS/SCSS watcher", "Terminal"],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "TSC watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
