{
    // format on paste
    "editor.formatOnPaste": true,
    // icon theme = material
    "workbench.iconTheme": "material-icon-theme",
    // markdown linting plugin
    "markdownlint.config": {
        // disable "No HTML" warnings
        "MD033": false
    },
    // enable world wrap by default
    "editor.wordWrap": "on",
    // TO_DO highlighting
    "todo-tree.defaultHighlight": {
        "type": "text",
        "foreground": "white",
        "background": "#ef8a5b",
        "rulerColour": "#ef8a5b",
        "iconColour": "#ef8a5b",
        "opacity": 100
    },
    // hide activity bar
    "workbench.activityBar.visible": false,
    // gitlense settings mode
    "gitlens.settings.mode": "advanced",
    // blinking cursor in termianl
    "terminal.integrated.cursorBlinking": true,
    // for XML formatting
    "xmlTools.splitAttributesOnFormat": true,
    // smaller tab width
    "workbench.editor.tabSizing": "shrink",
    // hide feedback :) icon
    "workbench.statusBar.feedback.visible": false,
    // open LaTeX preview inside VSCode
    "latex-workshop.view.pdf.viewer": "tab",
    // Enable linting LaTeX with ChkTeX.
    "latex-workshop.chktex.enabled": true,
    // speller language
    "spellright.language": [
        "en_GB"
    ],
    // underline spelling mistakes in green
    "spellright.notificationClass": "warning",
    // disable breadcrumbs for navigation
    "breadcrumbs.enabled": false,
    // add brackets to function autocompletion in Python
    "python.autoComplete.addBrackets": true,
    // enabling autosave every 1000ms
    "files.autoSave": "afterDelay",
    // lint Python files using pep8
    "python.linting.pep8Enabled": true,
    // lint Python files using pydocstyle    
    "python.linting.pydocstyleEnabled": true,
    // Execute forward synctex at cursor position after compiling LaTeX project.
    "latex-workshop.synctex.afterBuild.enabled": true,
    // make Pep8 underline color green for message type 'E'
    "python.linting.pep8CategorySeverity.E": "Warning",
    // prevent scrollbar from appearing for git blame - useful for LaTeX projects
    "gitlens.currentLine.scrollable": false,
    // show gitlens stuff in SCM/git view
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",
    // enable smooth cursor animation
    "editor.cursorSmoothCaretAnimation": true,
    // proper format for idents in shell
    "shellformat.flag": "-i 4",
    // disable text drag-and-drop
    "editor.dragAndDrop": false,
    // Controls the font family.
    "editor.fontFamily": "MonacoB2, Monaco, Hack, monospace",
    // disable PHP built-in suggestions in favour of plugin
    "php.suggest.basic": false,
    "latex-workshop.view.pdf.invert": 0.9,
    // python path
    "python.pythonPath": "/usr/local/bin/python3",
    // good ol' dual-pane settings editor
    "workbench.settings.useSplitJSON": true,
    // enable selection of British English speller on macOS
    "spellright.groupDictionaries": false,
    // disable activation of latex tab when switching to tex file
    "latex-workshop.view.autoFocus.enabled": false,
    // do not build latex automatically
    "latex-workshop.latex.autoBuild.run": "never",
    // disable Git Graph in status bar
    "git-graph.showStatusBarItem": false,
    // disable welcome page
    "workbench.startupEditor": "newUntitledFile",
    // map file types to languages
    "files.associations": {
        "*.emacs": "lisp"
    },
    // tab close on the left
    "workbench.editor.tabCloseButton": "left",
    // Automatically center the commit details view when it is opened.
    "git-graph.autoCenterCommitDetailsView": false,
    "spellright.documentTypes": [
        "latex",
        "plaintext"
    ],
    // do not open debug every time
    "debug.openDebug": "openOnFirstSessionStart",
    // make shortcuts for these commands work in terminal
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.openRecent"
    ],
    "workbench.colorTheme": "Material Theme Darker",
    // instant quick suggestions
    "editor.quickSuggestionsDelay": 0,
    // scope colors for brackets
    "bracket-pair-colorizer-2.colors": [
        "SandyBrown",
        "Orchid",
        "DodgerBlue"
    ],
    "explorer.confirmDelete": false,
    "cSpell.language": ",ru,lorem,lorem-ipsum,en-GB",
    "cSpell.userWords": [
        "AFME",
        "Arial",
        "Benos",
        "Bitcoin",
        "Blockchains",
        "Blockchainâ€™s",
        "CCPs",
        "CPMI",
        "CSDs",
        "Domanski",
        "Euroclear",
        "FICC",
        "Fedwire",
        "Hyperledger",
        "Mainelli",
        "NSCC",
        "Nakamoto",
        "Paech",
        "Permissioned",
        "Permissionless",
        "SELIC",
        "Satoshi",
        "Tsai",
        "blockchain",
        "counterparties",
        "counterparty",
        "crowdfunding",
        "cryptocurrencies",
        "cryptocurrency",
        "dematerialised",
        "disintermediated",
        "disintermediating",
        "disintermediation",
        "permisionless",
        "siloed"
    ],
    // do not open webpage when Live Server is on
    "liveServer.settings.NoBrowser": true,
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
}
